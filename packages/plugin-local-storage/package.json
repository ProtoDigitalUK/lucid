{
	"name": "@lucidcms/plugin-local-storage",
	"version": "1.0.5",
	"description": "The official Local Storage plugin for Lucid",
	"type": "module",
	"types": "./dist/index.d.ts",
	"module": "./dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsc && tsup",
		"dev": "tsup --watch",
		"format": "biome format ./src",
		"format:fix": "biome format --write ./src",
		"lint": "biome lint ./src",
		"lint:fix": "biome lint --apply ./src"
	},
	"files": ["dist/**"],
	"author": "Proto Digital",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ProtoDigitalUK/lucid.git",
		"directory": "packages/plugin-local-storage"
	},
	"keywords": [
		"CMS",
		"Lucid CMS",
		"Lucid",
		"Proto Digital",
		"Local Storage",
		"Plugin"
	],
	"devDependencies": {
		"@biomejs/biome": "^1.6.4",
		"@lucidcms/config": "*",
		"@lucidcms/core": "*",
		"@types/node": "^20.2.1",
		"tsup": "^8.0.2",
		"typescript": "^5.5.2"
	},
	"peerDependencies": {
		"@lucidcms/core": "^0.8.0-alpha.0"
	},
	"dependencies": {
		"fs-extra": "^11.2.0",
		"mime-types": "^2.1.35"
	},
	"volta": {
		"node": "20.15.0"
	},
	"license": "MIT"
}
